    <style>
        .container {
            display: grid;
            place-content: center;
            height: 90vh;
            gap: 2em;
            font-family: 'Poppins', sans-serif;
        }

        span {
            text-align: center;
            font-size: 1.8em
        }

        .msg  {
            font-size: 1.3em;
            padding: 1em;
            outline: 2px solid black;
        }

        .verified {
            font-size: 1.1em;
            color: rgb(129, 199, 129);
            font-weight: 600;
            letter-spacing: 1.1px;
        }

        .error {
            font-size: 1.2em;
            color: rgb(199, 80, 80);
        }

    </style>

</head>
<body>
    <div class="container">
        <span class="msg">
